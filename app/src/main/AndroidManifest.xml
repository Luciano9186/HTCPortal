<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.htc.htcportal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.login.LoginActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".view.login.ForgotPasswordActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".view.login.ResetPasswordActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".view.user_info.UserInfoActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".view.my_work.MyWorkActivity"
            android:theme="@style/MainTheme" />
    </application>

</manifest>